+				dma_ptr += 4;
+				memcpy(tb_ptr, dma_ptr, rc_size);
+				tb_ptr += rc_size;
+				dma_ptr += 4;
+				frames--;
+			}
+			if (copy_to_iter(pcm->tmp_buf[1], bytes, buf) != bytes) {

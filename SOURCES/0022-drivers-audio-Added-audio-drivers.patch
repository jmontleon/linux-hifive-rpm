+				memset(dma_ptr + lc_size, 0, (4 - lc_size));
+				dma_ptr += 4;
+				tb_ptr += lc_size;
+				memcpy(dma_ptr, tb_ptr, rc_size);
+				memset(dma_ptr + rc_size, 0, (4 - rc_size));
+				dma_ptr += 4;
+				tb_ptr += rc_size;
+				frames--;
+			}
+		} else {
+			if (copy_from_iter(dma_ptr, bytes, buf) != bytes) {
+				return -EFAULT;
+			}
+		}
+	} else {
